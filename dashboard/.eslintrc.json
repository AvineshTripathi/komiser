{
  "extends": [
    "next",
    "next/core-web-vitals",
    "plugin:storybook/recommended",
    "airbnb-base",
    "prettier"
  ],
  "env": {
    "jest/globals": true
  },
  "plugins": ["jest", "prettier"],
  "rules": {
    "react-hooks/exhaustive-deps": "off",
    "prettier/prettier": [
      "warn",
      {
        "endOfLine": "auto"
      }
    ],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ],
    "no-unused-vars": "off",
    "import/prefer-default-export": "off"
  }
}
